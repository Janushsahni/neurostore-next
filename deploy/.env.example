# NeuroStore deployment environment template
# Copy this file to deploy/.env and replace all placeholder secrets.

# Database
POSTGRES_USER=neuro_admin
POSTGRES_PASSWORD=generate_a_secure_random_password_here
POSTGRES_DB=neurostore_production
DATABASE_URL=postgres://neuro_admin:generate_a_secure_random_password_here@neurostore-db:5432/neurostore_production

# Redis
REDIS_URL=redis://neurostore-redis:6379

# Gateway secrets (required)
METADATA_SECRET=generate_a_32_plus_byte_secret_for_metadata
JWT_SECRET=generate_a_32_plus_byte_secret_for_jwt
PROOF_SUBMIT_TOKEN=generate_a_32_plus_byte_proof_submit_token
COMPLIANCE_SIGNING_KEY=generate_a_32_plus_byte_compliance_signing_key

# Control-plane related secrets used by shared services
MACAROON_SECRET=generate_a_32_plus_byte_macaroon_secret
NODE_SHARED_SECRET=generate_a_32_plus_byte_node_shared_secret

# Runtime policy
ENVIRONMENT=production
ALLOWED_ORIGINS=https://app.neurostore.in,https://console.neurostore.in
SESSION_TTL_SECS=86400
COOKIE_SECURE=true
GATEWAY_RATE_LIMIT_RPS=200
CP_RATE_LIMIT_RPS=120
CP_AUTH_LOCK_THRESHOLD=8
CP_AUTH_LOCK_SECS=300

# Logging and listen
RUST_LOG=info,neurostore_gateway=info
PORT=9009
